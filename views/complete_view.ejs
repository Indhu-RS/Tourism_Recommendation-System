<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Joined Data</title>

    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: purple;
            color: white;
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            padding: 20px;
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid white;
        }

        th {
            background-color: #6a5acd; /* SlateBlue color for header */
        }

        tr:nth-child(even) {
            background-color: #8a2be2; /* BlueViolet color for even rows */
        }

        tr:nth-child(odd) {
            background-color: #9400d3; /* DarkViolet color for odd rows */
        }
    </style>
</head>

<body>
    <h1>Joined Data</h1>
    <table>
        <thead>
            <tr>
                <th>District ID</th>
                <th>District Name</th>
                <th>Restaurant Name</th>
                <th>Tourist Place Name</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((row, index, array) => { %>
                <tr>
                    <td rowspan="<%= array.filter(r => r.district_id === row.district_id && r.district_name === row.district_name).length %>">
                        <%= row.district_id %>
                    </td>
                    <td rowspan="<%= array.filter(r => r.district_id === row.district_id && r.district_name === row.district_name).length %>">
                        <%= row.district_name %>
                    </td>
                    <td><%= row.name %></td>
                    <td><%= row.Place_name %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>

</html>
